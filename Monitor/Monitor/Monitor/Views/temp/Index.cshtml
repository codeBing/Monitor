@model Monitor.Models.data
@{
    ViewBag.Title = "Index";
}
<script src="@Url.Content("~/Scripts/addCss.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ichart.1.2.min.js")" type="text/javascript"></script>

<div class="page-header"><h2>实时数据显示</h2></div>

<div class="row" style="padding:20px;">
    <div class="col-lg-8">
        <div class="panel panel-default" style="width:1000px">
            <div class="panel-heading">
                奶牛原始数据曲线
            </div>
            <div class="panel-body" id="canvasDiv">
                @*<text>@ViewBag.data</text>*@
            </div>
        </div>
    </div>
</div>
<div class="row" style="padding:20px;">
    <div class="col-lg-8">
        <div class="panel panel-default" style="width:1000px">
            <div class="panel-heading">
                奶牛发情指数数据曲线
            </div>
            <div class="panel-body" id="hanxingDiv">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var str = "@ViewBag.data";
        ch = new Array;
        ch = str.split(",");
        var data = [
                    {
                        name: '',
                        value: ch,
                        color: '#0d8ecf',
                        line_width: 2
                    }
        ];
        var dateStr = "@ViewBag.date";
        labels = new Array;
        labels = dateStr.split(",");

        var hanxing = "@ViewBag.hanxingData";
        ch2 = new Array;
        ch2 = hanxing.split(",");
        var data2 = [
                    {
                        name: '',
                        value: ch2,
                        color: '#0d8ecf',
                        line_width: 2
                    }
        ];

        var line = new iChart.LineBasic2D({
            render: 'canvasDiv',
            data: data,

            align: 'center',
            title: '奶牛原始数据曲线',
            width: 900,
            height: 400,

            sub_option: {
                smooth: true,//平滑曲线
                point_size: 1,
                label: false
            },
            tip: {
                enable: true,
                shadow: true
            },
            legend: {
                enable: false
            },
            crosshair: {
                enable: true,
                line_color: '#62bce9'
            },
            coordinate: {
                width: '90%',
                valid_width: '90%',
                height: 260,
                axis: {
                    color: '#9f9f9f',
                    width: [0, 0, 2, 2]
                },
                grids: {
                    vertical: {
                        way: 'share_alike',
                        value: 12
                    }
                },
                scale: [{
                    position: 'left',
                    start_scale: 0,
                    //scale_space: 10,
                    scale_size: 2,
                    scale_color: '#9f9f9f'
                }, {
                    position: 'bottom',
                    label: {
                        rotate: -45,
                        textBaseline: 'middle',
                        textAlign: 'right'

                    },
                    labels: labels
                }]
            }
        });
        //开始画图
        line.draw();
        var line2 = new iChart.LineBasic2D({
            render: 'hanxingDiv',
            data: data2,

            align: 'center',
            title: '奶牛发情指数曲线',
            width: 900,
            height: 400,

            sub_option: {
                smooth: true,//平滑曲线
                point_size: 1,
                label: false
            },
            tip: {
                enable: true,
                shadow: true
            },
            legend: {
                enable: false
            },
            crosshair: {
                enable: true,
                line_color: '#62bce9'
            },
            coordinate: {
                width: '90%',
                valid_width: '90%',
                height: 260,
                axis: {
                    color: '#9f9f9f',
                    width: [0, 0, 2, 2]
                },
                grids: {
                    vertical: {
                        way: 'share_alike',
                        value: 12
                    }
                },
                scale: [{
                    position: 'left',
                    start_scale: 0,
                    //scale_space: 10,
                    scale_size: 2,
                    scale_color: '#9f9f9f'
                }, {
                    position: 'bottom',
                    label: {
                        rotate: -45,
                        textBaseline: 'middle',
                        textAlign: 'right'

                    },
                    labels: labels
                }]
            }
        });
        //开始画图
        line2.draw();
    });
</script>